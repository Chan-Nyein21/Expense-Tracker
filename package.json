{
  "name": "expense-tracker",
  "version": "1.0.0",
  "description": "Personal expense tracking application built with vanilla JavaScript",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite serve",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "cypress open",
    "test:e2e:headless": "cypress run",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write src/ tests/",
    "analyze": "vite-bundle-analyzer dist/stats.html",
    "lighthouse": "lighthouse http://localhost:4173 --output=json --output=html --output-path=./lighthouse-report"
  },
  "keywords": [
    "expense-tracker",
    "personal-finance",
    "javascript",
    "vanilla-js",
    "localStorage",
    "spa"
  ],
  "author": "Expense Tracker Team",
  "license": "MIT",
  "dependencies": {
    "chart.js": "^4.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@babel/preset-env": "^7.28.3",
    "@cypress/code-coverage": "^3.12.0",
    "@eslint/js": "^9.9.0",
    "cypress": "^13.6.0",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-cypress": "^3.5.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.4.0",
    "prettier": "^3.0.0",
    "vite": "^5.0.0",
    "vite-bundle-analyzer": "^0.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "browserslist": [
    "Chrome >= 90",
    "Firefox >= 88",
    "Safari >= 14",
    "Edge >= 90"
  ]
}
